{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "outDir": "./build",
        "baseUrl": "./src",

    },
    "include": ["./src/**/*.ts", "./src/**/*.d.ts"],
    "exclude": ["node_modules"]
}